<header id="header">
	<!--header-->
	<div class="header_top">
		<!--header_top-->
		<div class="container">
			<div class="row">
				<div class="col-sm-6">
					<div class="contactinfo">
						<ul class="nav nav-pills">
							<li><a href="#"><i class="fa fa-phone"></i> +2 95 01 88 821</a></li>
							<li><a href="#"><i class="fa fa-envelope"></i> info@domain.com</a></li>
						</ul>
					</div>
				</div>
				<div class="col-sm-6">
					<div class="social-icons pull-right">
						<ul class="nav navbar-nav">
							<li><a href="#"><i class="fa fa-facebook"></i></a></li>
							<li><a href="#"><i class="fa fa-twitter"></i></a></li>
							<li><a href="#"><i class="fa fa-linkedin"></i></a></li>
							<li><a href="#"><i class="fa fa-dribbble"></i></a></li>
							<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div><!--/header_top-->

	<div class="header-middle">
		<!--header-middle-->
		<div class="container">
			<div class="row">
				<div class="col-sm-4">
					<div class="logo pull-left">
						<a href="/"><img src="~/images/home/logo.png" alt="" /></a>
					</div>
				</div>
				<div class="col-sm-8">
					<div class="shop-menu pull-right">
						<ul class="nav navbar-nav">
							@if (User.Identity?.IsAuthenticated ?? false)
							{
								@if (User.IsInRole("Guest"))
								{
									<li><a><i class="fa fa-user"></i>Hi, @User.Identity.Name</a></li>
								}
								else
								{
									<li><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fa fa-user"></i>Hi, @User.Identity.Name</a></li>
								}
							}

							<li><a asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-cart"></i>Cart</a></li>

							@if (User.Identity?.IsAuthenticated ?? false)
							{
								<li><a asp-controller="Cart" asp-action="Checkout"><i class="fa fa-credit-card"></i>Checkout</a></li>
								<li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-lock"></i>Logout</a></li>
							}
							else
							{
								<li><a asp-controller="Account" asp-action="Login"><i class="fa fa-lock"></i>Login</a></li>
							}
						</ul>

						@* <ul class="nav navbar-nav">
						@if (User.Identity?.IsAuthenticated ?? false)
						{
						<li><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fa fa-user"></i>Hi, @User.Identity.Name</a></li>
						}
						<li><a asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-cart"></i>Cart</a></li>
						@if (User.Identity?.IsAuthenticated ?? false)
						{
						<li><a asp-controller="Cart" asp-action="Checkout"><i class="fa fa-credit-card"></i>Checkout</a></li>
						<li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-lock"></i>Logout</a></li>
						}
						else
						{
						<li><a asp-controller="Account" asp-action="Login"><i class="fa fa-lock"></i>Login</a></li>
						}
						</ul> *@
					</div>
				</div>
			</div>
		</div>
	</div><!--/header-middle-->

	<div class="header-bottom">
		<!--header-bottom-->
		<div class="container">
			<div class="row">
				<div class="col-sm-9">
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
					</div>
					<div class="mainmenu pull-left">
						<ul class="nav navbar-nav collapse navbar-collapse">
							<li><a asp-controller="Home" asp-action="Index" class="active">Home</a></li>
							<li class="dropdown">
								<a>Menu<i class="fa fa-angle-down"></i></a>
								<ul role="menu" class="sub-menu">
									<li><a asp-controller="Cart" asp-action="Index">Cart</a></li>
									<li><a asp-controller="Cart" asp-action="Checkout">Checkout</a></li>
								</ul>
							</li>

							<li><a asp-controller="Infomation" asp-action="Introduce">About</a></li>
							<li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
						</ul>
					</div>
				</div>
				<div class="col-sm-3">
					<!-- Thêm chức năng tìm kiếm ở đây-->
					<form asp-controller="Product" asp-action="Search" method="post">

						<div class="search_box pull-right">
							<input type="text" placeholder="Search" name="searchTerm" />
							<button class="btn btn-warning" type="submit">Search</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div><!--/header-bottom-->
</header><!--/header-->