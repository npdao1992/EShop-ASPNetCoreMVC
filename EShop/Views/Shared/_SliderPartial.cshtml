@{
	// 1360 x 540 pixel
	var index = 0;
}
<style>
	.carousel-inner {
		width: 100%;
		max-height: 400px !important;
	}

	.carousel-control {
		width: 5%; /* Điều chỉnh kích thước nút điều hướng */
		height: 100%; /* Chiều cao của nút điều hướng bằng chiều cao của carousel */
		color: #fff; /* Màu chữ của nút điều hướng */
		background: transparent !important; /* Nền trong suốt với ưu tiên cao */
		display: flex; /* Sử dụng flexbox để căn chỉnh nội dung */
		justify-content: center; /* Canh giữa nội dung theo chiều ngang */
		align-items: center; /* Canh giữa nội dung theo chiều dọc */
		font-size: 2em; /* Kích thước biểu tượng */
		text-decoration: none; /* Xóa gạch chân */
	}


	.carousel-control.left {
		left: 0;
	}

	.carousel-control.right {
		right: 0;
	}


</style>
<section id="slider">
	<!--slider-->
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div id="slider-carousel" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
						<li data-target="#slider-carousel" data-slide-to="1"></li>
						<li data-target="#slider-carousel" data-slide-to="2"></li>
					</ol>

					<div class="carousel-inner">
						@foreach (var slider in ViewBag.Sliders)
						{
							
						<div class="item @(index == 0 ?"active" :"")">
							<div class="col-sm-12">
								<img src="~/media/sliders/@slider.Image" class="girl igm-responsive" width="100%" height="100%"/>
							</div>

							</div>
							index++;
						}

					</div>

					<a class="left carousel-control" href="#slider-carousel" data-slide="prev">
						<i class="fa fa-angle-left"></i>
					</a>
					<a class="right carousel-control" href="#slider-carousel" data-slide="next">
						<i class="fa fa-angle-right"></i>
					</a>
				</div>

			</div>
		</div>
	</div>
</section><!--/slider-->