@model IEnumerable<EShop.Models.ViewModels.BrandViewModel>



<div style="text-align:center; margin-bottom:20px;">
    <span type="button" data-toggle="collapse" aria-expanded="false">
        <span class="badge">(@Model.Count())</span>
    </span>
</div>
<div class="brands-name">
  @*   <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#brandMenu" aria-expanded="false" aria-controls="brandMenu">
        Danh sách thương hiệu <span class="badge" style="background-color: #FE980F">(@Model.Count())</span>
    </button>
 *@
    <div class="collapse in" id="brandMenu"> <!-- 'in' class để mặc định mở khi collapse -->
        <ul class="nav nav-pills nav-stacked">
            <!-- Hiển thị 5 thương hiệu đầu tiên -->
            @foreach (var item in Model.Take(5))
            {
                <li>
                    <a asp-action="Index" asp-controller="Brand" asp-route-Slug="@item.Brand.Slug">
                        @item.Brand.Name
                        <span class="badge pull-right" style="background-color: #FE980F">(@item.ProductCount)</span>
                    </a>
                </li>
            }

            <div id="moreBrands" style="display: none;" class="nav nav-pills nav-stacked">
                <!-- Ẩn các thương hiệu còn lại -->
                @foreach (var item in Model.Skip(5))
                {
                    <li>
                        <a asp-action="Index" asp-controller="Brand" asp-route-Slug="@item.Brand.Slug">
                            @item.Brand.Name
                        <span class="badge pull-right" style="background-color: #FE980F">(@item.ProductCount)</span>
                        </a>
                    </li>
                }
            </div>
        </ul>

        <!-- Nút "Xem thêm" với cùng màu sắc và chiều rộng -->
    <button id="toggleBrandsBtn" class="btn btn-primary" style="width: 100%; margin-top: 10px; border-radius: 10px;">
            Xem thêm
        </button>
    </div>
</div>



