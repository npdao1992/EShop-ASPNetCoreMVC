@using Microsoft.AspNetCore.Identity
@model Tuple<IEnumerable<IdentityRole>, int>
@{
	ViewData["title"] = "Role Listed";
	var stt = 1;

	Paginate pager = new Paginate();
	int pageNo = 0;
	if (ViewBag.Pager != null)
	{
		pager = ViewBag.Pager;
		pageNo = pager.CurrentPage;
	}
}
<h3>List Role (<span style="color: orangered"> @Model.Item2 </span>)</h3>

<a class="btn btn-primary" asp-action="Create" asp-controller="Role">Add Role</a>

<table class="table">
	<thead>
		<tr>
			<th scope="col">No</th>
			<th scope="col">Role Id</th>
			<th scope="col">Role Name</th>
			<th scope="col">Role Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Item1)
		{
			<tr>
				<th scope="row">@stt</th>
				<td>@item.Id</td>
				<td>@item.Name</td>

				<td>
					<a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Role" asp-route-id="@item.Id">Edit</a>
					<a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Role" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
			stt++;
		}
	</tbody>
</table>

@*Phân trang ở đây*@
<partial name="_paging" model="@pager" />