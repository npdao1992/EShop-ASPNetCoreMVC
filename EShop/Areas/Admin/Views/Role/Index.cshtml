@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
	ViewData["title"] = "Role Listed";
	var stt = 1;
}
<h3>List Role (<span style="color: orangered"> @Model.Count() </span>)</h3>

<a class="btn btn-primary" asp-action="Create" asp-controller="Role">Add Role</a>

<table class="table" id="myTable">
	<thead>
		<tr>
			<th style="text-align:center">No</th>
			<th style="text-align:center">Role Id</th>
			<th style="text-align:center">Role Name</th>
			<th style="text-align:center">Role Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th style="text-align:center">@stt</th>
				<td>@item.Id</td>
				<td style="text-align:center">@item.Name</td>

				<td style="text-align:center">
					<a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Role" asp-route-id="@item.Id">Edit</a>
					<a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Role" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
			stt++;
		}
	</tbody>
</table>