@model Tuple<IEnumerable<OrderModel>, int>
@{
	ViewData["title"] = "Order Listed";

	var stt = 1;

	Paginate pager = new Paginate();
	int pageNo = 0;
	if (ViewBag.Pager != null)
	{
		pager = ViewBag.Pager;
		pageNo = pager.CurrentPage;
	}
}
<h3>List Order (<span style="color: orangered"> @Model.Item2 </span>)</h3>
<table class="table">
	<thead>
		<tr>
			<th scope="col">No</th>
			<th scope="col">Order Id</th>
			<th scope="col" width="20%">Order Code</th>
			<th scope="col">UserName</th>
			<th scope="col">Order Date</th>
			<th scope="col">Order Stauts</th>
			<th width="25%">Order Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Item1)
		{
			<tr>
				<th>@stt</th>
				<th>@item.Id</th>
				<th>@item.OrderCode</th>
				<td>@item.UserName</td>
				<td>@item.CreatedDate</td>
				<td>
					@if (@item.Status == 1)
					{
						<span class="text text-success">Đơn hàng mới</span>
					}
					else
					{
						<span class="text text-danger">Đơn hàng thành công</span>
					}
				</td>
				<td>
					<a asp-action="ViewOrder" class="btn btn-warning btn-sm" asp-controller="Order" asp-route-ordercode="@item.OrderCode">View Order</a>
					<a asp-action="Eccept" class="btn btn-success btn-sm" asp-controller="Order" asp-route-id="@item.Id">Eccept</a>
					<a asp-action="Cancel" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Order" asp-route-id="@item.Id">Cancel</a>
				</td>
			</tr>
			stt++;
		}
	</tbody>
</table>

@*Phân trang ở đây*@
<partial name="_paging" model="@pager" />